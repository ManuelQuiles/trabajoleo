
    <%- include('_nav-1.ejs') %> 
        
        
         

        <% articles.forEach(article => { %> 
            
                
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="card-title h2"><%= article.title %></div>
                        <div class="text-muted"><%= article.createdAt.toLocaleDateString() %> </div>
                    </div>
                    <div class="card-body"> 
                        <p class="card-text"> <%= article.markdown  %></p>
                        <div class="d-flex justify-content-end mb-3 me-2"> 
                            <a href="../articles/<%= article.slug %>" class="btn btn-outline-dark">
                                Seguir leyendo...
                            </a>            
                        </div>
                    </div>
                    
                  </div>





        <% }) %> 
